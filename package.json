{
  "name": "mckismetlab-launcher",
  "version": "0.4.3-beta",
  "productName": "MklLauncher",
  "description": "Minecraft Mods Launcher",
  "author": "Quasi (https://github.com/QuasiMkl)",
  "license": "GPL-3.0",
  "main": "./dist/electron/main.js",
  "homepage": "https://github.com/mcKismetLab/mckismetlab-launcher",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcKismetLab/mckismetlab-launcher.git"
  },
  "bugs": {
    "url": "https://github.com/mcKismetLab/mckismetlab-launcher/issues"
  },
  "dependencies": {
    "adm-zip": "^0.5.9",
    "discord-rpc": "^4.0.1",
    "form-data": "^4.0.0",
    "fs-extra": "^10.0.0",
    "got": "11.8.3",
    "i18next": "^20.6.1",
    "keytar": "^7.7.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.12.0",
    "react-router-dom": "^5.3.0",
    "react-spring": "^9.3.0",
    "tslib": "^2.3.1",
    "uuid": "^8.3.2",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.4",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@types/adm-zip": "^0.4.34",
    "@types/discord-rpc": "^4.0.0",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@types/react-router-dom": "^5.3.0",
    "@types/uuid": "^8.3.1",
    "babel-loader": "^8.2.2",
    "concurrently": "^7.0.0",
    "core-js": "^3.17.3",
    "cross-env": "^7.0.3",
    "css-loader": "^6.2.0",
    "electron": "18.3.0",
    "electron-builder": "23.0.9",
    "electron-builder-squirrel-windows": "^23.0.9",
    "electronmon": "^2.0.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.3.0",
    "node-sass": "^9.0.0",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.3.0",
    "typescript": "^4.4.2",
    "url-loader": "^4.1.1",
    "wait-on": "^6.0.0",
    "webpack": "^5.52.0",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "3.11.2",
    "webpack-merge": "^5.8.0"
  },
  "scripts": {
    "outputVersion": "node -p \"'export const LAUNCHER_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/main/version.ts",
    "electron:dev-tsc": "tsc --project ./src/main/tsconfig.json --watch",
    "electron:tsc": "tsc --project ./src/main",
    "dev:electron": "cross-env NODE_ENV=development webpack --config webpack.electron.config.js && electronmon ./dist/electron/main.js",
    "dev:electron-tsc": "wait-on http://localhost:4000 && cross-env NODE_ENV=development electronmon ./dist/electron/main.js",
    "dev:renderer": "cross-env NODE_ENV=development webpack serve --config webpack.renderer.dev.config.js",
    "build:electron": "cross-env NODE_ENV=production webpack --config webpack.electron.config.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
    "build": "yarn outputVersion && yarn electron:tsc && yarn build:renderer",
    "build:start": "yarn build:renderer && yarn build:electron && electron ./dist/electron/main.js",
    "dev": "yarn outputVersion && concurrently \"yarn dev:electron-tsc\" \"yarn electron:dev-tsc\" \"yarn dev:renderer\"",
    "electron:build-win-never": "yarn build && node electron-builder.js --platform WINDOWS --publish never",
    "electron:build-mac-never": "yarn build && node electron-builder.js --platform MAC --publish never",
    "build:publish": "yarn build && node electron-builder.js --platform all --publish always"
  },
  "electronmon": {
    "patterns": [
      "!**/*",
      "./src/**/*"
    ]
  }
}
